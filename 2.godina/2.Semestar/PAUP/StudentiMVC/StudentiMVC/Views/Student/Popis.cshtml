@using StudentiMVC.Models
@model IEnumerable<Student>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    int brojac = 0;
}
@{ 
    

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
    <h2>@ViewBag.Title</h2>
        @using (Html.BeginForm("Popis", "Student", FormMethod.Get))
        {
            <p>
                Naziv : @Html.TextBox("Naziv")
                <input type="submit" value="Traži" />
            </p>
        }

    <table border="1" cellspacing="2"  cellpadding="4"  >
        <tr>
            <td>R.Br.</td>
            <th>Ime i prezime</th>
            <th>Spol</th>
            <th>OIB</th>
            <th>Detaljno</th>
            <th>Ažuriranje</th>
            <th>Obriši</th>
        </tr>
        @foreach (Student st in Model)
        {
            {
                
            <tr>
                <td>@(++brojac)</td>
                <td>@st.Ime @st.Prezime</td>
                <td>@st.Spol</td>
                <td>@st.OIB</td>
                <td>@Html.ActionLink("Više", "Detaljno", new { id = st.Id })</td>
                <td>@Html.ActionLink("Ažuriraj", "Azuriraj", new { id = st.Id })</td>
                <td>@Html.ActionLink("Obriši", "Obrisi", new { id = st.Id })</td>
                
            </tr>
            }
        }
    </table>
    </div>
    <br />
    <div>
        <ul>
            <li>@Html.ActionLink("Pocetna", "Index")</li>
        </ul>
    </div>
</body>
</html>
