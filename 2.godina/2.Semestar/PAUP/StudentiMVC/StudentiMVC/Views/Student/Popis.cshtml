@using StudentiMVC.Models
@model IEnumerable<Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 

    int brojac = 0;
}

    <h2>@ViewBag.Title</h2>
    @using (@Html.BeginForm("Popis", "Student", FormMethod.Get, new { @class = "from-inline" }))

    {
        <div class="form-group">
      @Html.Label("Naziv", new { @class ="sr-only"})
      @Html.TextBox("Naziv", "", new { @class = "form-control",placeholder="Naziv studenta"})
        </div>

<div class="form-group">
    <label class="radio-inline">
        @Html.RadioButton("Spol","M") Muški
    </label>
    <label class="radio-inline">
        @Html.RadioButton("Spol", "Ž") Ženski
    </label>
    <label class="radio-inline">
        @Html.RadioButton("Spol", "") Svi
    </label>
    <button type="submit" class="btn btn-primary">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Traži
    </button>
</div>

}
    <table class="table"  >
        <tr>
            <th>R.Br.</th>
            <th>Ime i prezime</th>
            <th>Spol</th>
            <th>OIB</th>
            <th>Detaljno</th>
            <th>Ažuriranje</th>
            <th>Obriši</th>
        </tr>
        @foreach (Student st in Model)
        {
            {

            <tr>
                <td>@(++brojac)</td>
                <td>@st.Ime @st.Prezime</td>
                <td>@st.Spol</td>
                <td>@st.OIB</td>
                <td>@Html.ActionLink("Više", "Detaljno", new { id = st.Id })</td>
                <td>@Html.ActionLink("Ažuriraj", "Azuriraj", new { id = st.Id })</td>
                <td>@Html.ActionLink("Obriši", "Obrisi", new { id = st.Id })</td>
                
            </tr>
                }
            }
    </table>

    <br />
    <div>
        <ul>
            <li>@Html.ActionLink("Pocetna", "Index")</li>
        </ul>
    </div>
